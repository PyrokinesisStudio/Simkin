<view>
<controls>
<control type="NumericEdit" x="10" y="10" width="30" id="a"/>
<control type="Static" text="+" x="57" y="10" id="op"/>
<control type="NumericEdit" x="65" y="10" width="30" id="b"/>
<control type="Static" text="=" x="10" y="50"/>
<control type="Static" x="20" y="50" width="80" id="c"/>
<control type="Button" text="Calculate" x="10" y="100" method="calculate"/>
</controls>
<function name="init">
setFocus("a");
setText("op","+");
</function>
<function name="calculate">
setText("c",getText("a")+getText("b"));
</function>
</view>
